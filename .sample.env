# Server configuration
PORT=3000  # Port number on which the server will run

# Database configuration
DB_URL=localhost  # URL of the database server
DB_USER=your_db_user  # Username for the database
DB_PASS=your_db_password  # Password for the database
DB_NAME=your_db_name  # Name of the database
DB_ALTER=false  # Set to true if you want Sequelize to alter tables to match models
DB_FORCE=false  # Set to true if you want Sequelize to drop and recreate tables on startup

# Security settings
SALT=15  # Number of salt rounds for bcrypt
JWT_SECRET=your_jwt_secret  # Secret key for signing JWTs
JWT_EXPIRY=1d  # Expiry time for JWTs (e.g., 1d for 1 day, 12h for 12 hours)

# Environment setting
NODE_ENV=development  # Environment mode (development, production, etc.)
